    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "inlineSourceMap": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}